{{#if articles}}
    {{#each articles}}
        {{#if saved}}
            <div class="card">
                <div class="card-header">
                    <h3>
                        <a class="article-link" href="{{link}}">{{headline}}</a>
                        <button class="btn btn-primary" id="delete" data-id="{{id}}" data-newsaved="{{save}}">Delete from Saved</button>
                        <a class="btn btn-primary article-comments">Article Comments</a>
                    </h3>
                </div>
                <div class="card-body">{{summary}}</div>
            </div>
        {{/if}}
    {{/each}}
{{else}}
    <div class="card">
        <div class="card-header">
            <h3>
                Uh Oh. Looks like we don't have any saved articles.
            </h3>
        </div>
        <div class="card-body"></div>
    </div>
    <div class="card">
        <div class="card-header">
            <h3>Would you like to browse available articles?</h3>
        </div>
        <div class="card-body">
            <a href="/">Browse articles</a>
        </div>
    </div>
{{/if}}
