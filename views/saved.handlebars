    <a href="/">Mongo Scraper</a>
    <a href="/">Home</a>
    <a href="/saved">Saved Articles</a>
    <a href="#">Clear articles!</a>
</nav>
<h1>Saved Articles</h1>
<h3>Your Saved Articles</h3>
<div class="container-fluid article-container">
    {{#if saved}}
        {{#each articles}}
            <div class="card">
                <div class="card-header">
                    <h3>
                        <a class="article-link" href="{{link}}">{{headline}}</a>
                        <a class="btn btn-primary save">Save</a>
                    </h3>
                </div>
                <div class="card-body">{{summary}}</div>
            </div>
        {{/each}}
    {{else}}
        <div class="card">
            <div class="card-header">
                <h3>
                    Uh Oh. Looks like we don't have any saved articles.
                </h3>
            </div>
            <div class="card-body"></div>
        </div>
        <div class="card">
            <div class="card-header">
                <h3>Would you like to browse available articles?</h3>
            </div>
            <div class="card-body">
                <a href="/">Browse articles</a>
            </div>
        </div>
    {{/if}}
</div>
