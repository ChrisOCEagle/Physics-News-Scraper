{{#if articles}}
    {{#each articles}}
        <div class="card">
            <div class="card-header">
                <h3>
                    <a class="article-link" href="{{link}}">{{headline}}</a>
                    <a class="btn btn-primary save" data-saved="">Save</a>
                </h3>
            </div>
            <div class="card-body">{{summary}}</div>
        </div>
    {{/each}}
{{else}}
    <div class="card">
        <div class="card-header">
            <h3>
                Uh Oh. Looks like we don't have any new articles.
            </h3>
        </div>
        <div class="card-body"></div>
    </div>
    <div class="card">
        <div class="card-header">
            <h3>What would you like to do?</h3>
        </div>
        <div class="card-body">
            <a href="/scrape">Try getting some new articles.</a>
            <a href="/saved">Go to saved articles.</a>
        </div>
    </div>
{{/if}}
